{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext", // Change this line
      "moduleResolution": "node", // Add this line
      "types": ["node"], // Add this line
      "outDir": "./dist/src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }